            "maxItems": 4
          },
          {
            "id": "quickActions",
            "type": "action-list",
            "titleKey": "dashboard.quickActions",
            "descriptionKey": "dashboard.quickActionsDescription",
            "actions": [
              {
                "id": "createTimesheet",
                "labelKey": "dashboard.createTimesheet",
